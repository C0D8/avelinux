{
    "manifest_version": 3,
    "name": "Privacy Detector",
    "version": "1.0",
    "description": "Detecta conexões de terceira parte, cookies e violações de privacidade.",
    "permissions": [
      "webRequest",
      "cookies",
      "storage",
      "activeTab",
      "scripting",
      "tabs"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "icons": {
      "48": "icon.png"
    },
    "host_permissions": ["<all_urls>"]
  }
  